{
  "compilerOptions": {
    "target": "es2017",                       
    "module": "commonjs",                     
    "lib": ["es6"],                                
    "allowJs": true,                          
    "outDir": "./dist",                       
    "rootDir": "./src",                       
    "removeComments": true,
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["./controllers/*"], 
      "@models/*": ["./models/*"],
      "@views/*": ["./views/*"],
      "@config/*": ["./config/*"]
    },                   
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                                        
    "esModuleInterop": true,                  
    "resolveJsonModule": true,
    "experimentalDecorators": true,           
    "emitDecoratorMetadata": true,            
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true 
  }
}
